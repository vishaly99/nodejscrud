<%- include('./layouts/header') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if(message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>
            <div class="table-responsive">

                <table class="table table-striped text-center my-3">
                    <thead>
                        <tr class="table-dark">
                            <td>ID</td>
                            <td>Image</td>
                            <td>Name</td>
                            <td>Email</td>
                            <td>Phone Number</td>
                            <td>Action</td>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0;i<userdata.length;i++) {%>
                        <tr>
                            <td><%= i %></td>
                            <td><img src="<%= userdata[i].image %>" width="50" class="img-thumbnail" alt=""></td>
                            <td><%= userdata[i].name %></td>
                            <td><%= userdata[i].email %></td>
                            <td><%= userdata[i].phone %></td>
                            <td>
                                <a href="/edit/<%= userdata[i]._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i>
                                </a>
                                <a href="/delete/<%= userdata[i]._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i>
                                </a>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table> 

            </div>
        </div>
    </div>
</div>

<%- include('./layouts/footer') %>